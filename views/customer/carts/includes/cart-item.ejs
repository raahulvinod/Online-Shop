


<article class="cart-item">
    <div class="cart-item-info">
        <h2><%= item.product.title %></h2>
        <p>₹<%= item.totalPrice.toFixed(2)  %> <span class="cart-product-price">( Price (1 item) ₹<%= item.product.price.toFixed(2) %> )</span></p>
    </div>
    <form class="cart-item-management" data-productid="<%= item.product.id %>" data-csrf="<%= locals.csrfToken %>">
        <input type="number" value="<%= item.quantity %>" required>
        <button class="btn btn-delete">Update</button>
    </form>
</article>